style.
  .teams {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

.inner
  h2 Matchup:&nbsp;
    span #{matchup.home}
    span &nbsp;vs&nbsp;
    span #{matchup.away}
  h4 Week #{matchup.week}

.teams
  each team in teams
    .team
      h2 Stats for Week #{matchup.week} for #{team.ownerId}
      div total fantasy points #{team.teamTotal}
      ul
        each position in team.positions
          li
            h3= position._id
            ul
              each player in position.players
                li
                  img(src=`/graphics/players/${player.player.esbId}.png` alt="")
                  h4 #{player.player.displayName} #{player.player.position} #{player.player.teamAbbr}
                  if player.best
                    div BEST
                  if player.player.position === "DST"
                    div #{player.sacks} sacks
                    div #{player.fumbles} fumbles
                    div #{player.ints} ints
                    div #{player.safeties} safeties
                    div #{player.TDs} TDs
                    div #{player.pointsAllowed} pointsAllowed
                  else
                    p
                      if player.passingAttempts
                        div #{player.passingCompletions}/#{player.passingAttempts} for #{player.passingYards} yards, #{player.passingTDs} TDs, #{player.passingInts} Ints
                        if player.passingTwoPts
                          div #{player.passingTwoPts} Two Point Conversions
                      if player.rushingAttempts
                        div #{player.rushingAttempts} rushes for #{player.rushingYards} yards, #{player.rushingTDs} TDs
                        if player.rushingTwoPts
                          div #{player.rushingTwoPts} Two Point Conversions
                      if player.receivingReceptions
                        div #{player.receivingReceptions} receptions for #{player.receivingYards} yards, #{player.receivingTDs} TDs
                        if player.receivingTwoPts
                          div #{player.receivingTwoPts} Two Point Conversions
                      if player.fumbles
                        div #{player.fumbles} Fumbles
                  h6 FANTASY POINTS #{player.fantasyPoints}
